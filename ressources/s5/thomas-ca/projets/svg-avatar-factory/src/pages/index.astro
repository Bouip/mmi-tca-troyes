---
import Layout from "../layouts/Layout.astro";
import AvatarGenerator from "../components/AvatarGenerator.tsx";
import AuthButtons from "../components/AuthButtons.tsx";
import Favorites from "../components/Favorites.tsx";
---

<Layout title="TP Avatar Factory">
    <div class="flex justify-end mb-4">
        <AuthButtons client:load />
    </div>
    <div class="grid md:grid-cols-2 gap-4">
        <!-- Bloc génération -->
        <AvatarGenerator client:load />

        <!-- Bloc favoris -->
        <div class="border border-green-500 p-4 rounded-xl">
            <h2 class="text-xl mb-2">⭐ Mes Favoris</h2>
            <Favorites client:load />
        </div>
    </div>
</Layout>
