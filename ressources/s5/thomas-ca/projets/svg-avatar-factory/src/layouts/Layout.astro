---
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="fr" class="bg-black text-green-400 font-mono">
    <head>
        <meta charset="utf-8" />
        <title>{title}</title>
    </head>
    <body class="min-h-screen flex flex-col">
        <header class="p-4 text-center border-b border-green-600">
            <h1 class="text-3xl">👾 TP SVG Avatar Factory 👾</h1>
        </header>

        <main class="flex-1 p-6">
            <slot />
        </main>

        <footer class="p-4 text-center border-t border-green-600">
            Fait à Troyes avec ❤️ par Thomas Castellengo — Avatars générés par
            Llama-3.1-8b-instant.
        </footer>
    </body>
</html>
